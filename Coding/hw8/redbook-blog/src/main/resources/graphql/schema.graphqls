type Query{
    getPostById(id: ID): Post
    getAuthorById(id:ID): Author
}

type Mutation{   # "!" -> required field
    createPost(title:String!, description:String!, content:String!):Post
    createAuthor(firstName: String!, lastName:String!, age:Int):Author
}


type Post{
    id: ID
    title: String
    description: String
    content: String
}

type Author{
    id:ID
    firstName: String
    lastName: String
    age: Int
}